        </activity>
        <activity
            android:name=".Simulation1"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sra.stemsimulations.MainActivity" />
        </activity>
        <activity android:name=".Simulation1Code">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sra.stemsimulations.MainActivity" />
        </activity>

        <activity android:name=".Simulation1More">
            <meta-data
